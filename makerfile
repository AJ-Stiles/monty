CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic -std=c89
SRCS := main.c stack.c opcode_push.c opcode_pall.c
OBJS := $(SRCS:.c=.o)
TARGET := monty

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(TARGET)

%.o: %.c monty.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(TARGET)

re: fclean all

.PHONY: all clean fclean re

